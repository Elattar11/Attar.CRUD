@model DepartmentViewModel

@{
    ViewData["Title"] = "Edit Department";
}

<h1 class="w-100 text-center">Edit Department</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="PartialViews/CreateEditDepartmentPartial" />

    <input type="submit" value="Save" class="btn btn-primary" /> | 
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Cancel</a>

</form>

@section ValidationScriptsSection
{
    <partial name="_ValidationScriptsPartial" />
