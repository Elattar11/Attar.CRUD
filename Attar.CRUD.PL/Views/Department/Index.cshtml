

@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="w-100 text-center">All Departments</h1>

<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add New Department</a>

<div class="row justify-content-center align-items-center mt-5">
    <partial name="_SearchPartial" />
</div>


@if (Model.Count() > 0)
{
    <table class="mt-5 table table-striped table-hover ">
        <thead >
            <tr>
                <th>Image</th>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody >
            @foreach (var department in Model)
            {


                <tr>
                    <td>
                        <img src="~/files/images/@department.ImageName" width="50" height="50"  class="img-fluid rounded" alt="Department Image" />
                    </td>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>

                    <partial name="_ButtonsPartial" model="@department.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-danger">
        <h4>There is no Departments</h4>
    </div>
}
