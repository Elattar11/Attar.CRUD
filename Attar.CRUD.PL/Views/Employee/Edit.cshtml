@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<h1 class="w-100 text-center">Edit <span class="text-success">@Model.Name</span> Data</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="PartialViews/CreateEditEmployeePartial" />


    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</a>

</form>

@section ValidationScriptsSection
{
    <partial name="_ValidationScriptsPartial" />
